// start of a spiral staircase

int $numSteps = 20; // Number of steps
float $radius = 2.0; // Radius of the spiral
float $height = 0.2; // Height of each step
float $angleIncrement = 10.0; // Angle increment for each step
float $rotationIncrement = -10.0; // Rotation increment for each step

int $step = 0;
float $angle = 0.0;
float $rotation = 0.0;  

while ($step < $numSteps)
{
    float $x = $radius * cos(deg_to_rad($angle));
    float $z = $radius * sin(deg_to_rad($angle));
    
    float $y = $step * $height;
    
    // Create a cube as the step at position ($x, $y, $z) and rotate it
    polyCube -w 1 -h $height -d 1 -ax 0 1 0 -sx 1 -sy 1 -sz 1 -ch 1;
    move $x $y $z;
    rotate 0 $rotation 0;
    
    $angle += $angleIncrement;
    $rotation += $rotationIncrement; // Increase rotation for each step
    $radius += 0.1; // Increase radius for each step
    $step++;
}



// BOOKSHELF // no frame // with randomized numbers of books

int $numShelves = 5; // Number of shelves
float $shelfHeight = 1.5; // Initial height of the first shelf (increased)
float $shelfSpacing = 0.5; // Increased spacing between shelves
int $minBooksPerShelf = 1; // Minimum number of books per shelf
int $maxBooksPerShelf = 10; // Maximum number of books per shelf
float $bookWidth = 0.1; // Width of each book
float $bookHeight = 0.3; // Increased height of each book
float $bookDepth = 0.2; // Depth of each book

// Create the bookshelf structure with shelves moving upwards
int $shelf = 0;
while ($shelf < $numShelves)
{
    int $numBooks = rand($minBooksPerShelf, $maxBooksPerShelf); // Random number of books
    polyCube -w 4 -h 0.1 -d 1 -sx 1 -sy 1 -sz 1 -ax 0 1 0 -ch 1; // Shelf
    move(0, $shelfHeight, 0);
    
    // Add random number of books on each shelf
    int $book = 0;
    float $bookX = -1.8;
    while ($book < $numBooks)
    {
        polyCube -w $bookWidth -h $bookHeight -d $bookDepth -sx 1 -sy 1 -sz 1 -ax 0 1 0 -ch 1; // Book
        move($bookX, $shelfHeight + ($bookHeight / 2) + 0.1, 0.4); // Adjusted book height
        
        $bookX += $bookWidth + 0.1; // Adjust the spacing between books
        $book++;
    }
    
    $shelfHeight += $shelfSpacing;
    $shelf++;
}


